<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.edu.module.dao.EnrollClassDao">

    <resultMap type="net.edu.module.entity.EnrollClassEntity" id="enrollClassMap">
        <result property="id" column="id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="creator" column="creator"/>
        <result property="updater" column="updater"/>
        <result property="version" column="version"/>
        <result property="status" column="status"/>
        <result property="className" column="class_name"/>
        <result property="startTime" column="start_time"/>
        <result property="endTime" column="end_time"/>
        <result property="object" column="object"/>
        <result property="target" column="target"/>
        <result property="deleted" column="deleted"/>
        <result property="classDate" column="class_date"/>
    </resultMap>

    <update id="deleteEnrollClass">
        update enroll_class  set deleted=1 where id = #{id}
    </update>

    <select id="getEnrollClassByPage" resultType="net.edu.module.entity.EnrollClassEntity">
        select *
        from enroll_class
        where deleted = 0
    </select>

    <select id="select" resultType="net.edu.module.entity.EnrollClassEntity">
        select * from enroll_class
        where deleted = 0
        <if test="className != null">
            and class_name like concat('%',#{className},'%')
        </if>
    </select>

    <update id="updateStatus">
        update enroll_class  set status = 1 where id = #{id}
    </update>
</mapper>