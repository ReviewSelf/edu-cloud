<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.edu.module.dao.ArchiveWeightTargetAssessDao">

    <resultMap type="net.edu.module.entity.ArchiveWeightTargetAssessEntity" id="archiveWeightTargetAssessMap">
        <result property="id" column="id"/>
        <result property="assessId" column="assess_id"/>
        <result property="targetId" column="target_id"/>
        <result property="courseId" column="course_id"/>
        <result property="weight" column="weight"/>
        <result property="weightExplain" column="weight_explain"/>
        <result property="deleted" column="deleted"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="creator" column="creator"/>
        <result property="version" column="version"/>
        <result property="updater" column="updater"/>
    </resultMap>

    <select id="selectAssessByTargetId" resultType="net.edu.module.vo.ArchiveWeightTargetAssessVO">
        select
            id,
            target_id as targetId,
            assess_id as assessId,
            (select name from archive_assess t1 where t1.id = assessId) as assessName,
            course_id as courseId,
            (select name from archive_course t1 where t1.id = courseId) as courseName,
            weight
        from archive_weight_target_knowledge
        where deleted = 0 and target_id = #{targetId}
    </select>

    <insert id="insertAssessWeight">
        insert into archive_weight_target_assess(assess_id,target_id,course_id,weight)
        values
        <foreach collection="list" item="item" separator=",">
            (#{item.assessId},#{item.targetId},#{item.courseId},#{item.weight})
        </foreach>
    </insert>
</mapper>