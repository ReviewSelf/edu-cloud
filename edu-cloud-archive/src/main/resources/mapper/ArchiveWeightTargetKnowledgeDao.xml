<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.edu.module.dao.ArchiveWeightTargetKnowledgeDao">

    <resultMap type="net.edu.module.entity.ArchiveWeightTargetKnowledgeEntity" id="archiveWeightTargetKnowledgeMap">
        <result property="id" column="id"/>
        <result property="targetId" column="target_id"/>
        <result property="courseId" column="course_id"/>
        <result property="weight" column="weight"/>
        <result property="deleted" column="deleted"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="creator" column="creator"/>
        <result property="version" column="version"/>
        <result property="updater" column="updater"/>
    </resultMap>


    <select id="selectKnowledgeByTargetId" resultType="net.edu.module.vo.ArchiveWeightTargetKnowledgeVO">
        select
            id,
            target_id as targetId,
            course_id as courseId,
            (select name from archive_course t1 where t1.id = courseId) as courseName,
            weight
        from archive_weight_target_course
        where deleted = 0 and target_id = #{targetId}
    </select>

    <insert id="insertKnowledgeWeight">
        insert into archive_weight_target_course(target_id,course_id,weight)
        values
            <foreach collection="list" item="item" separator=",">
                (#{item.targetId},#{item.courseId},#{item.weight})
            </foreach>
    </insert>
</mapper>
