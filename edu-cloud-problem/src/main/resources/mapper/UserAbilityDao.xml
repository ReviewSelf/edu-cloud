<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.edu.module.dao.UserAbilityDao">

    <insert id="insertUserAbility">
        insert into user_ability(user_id, ability_id)
        values (#{userId}, #{abilityId})
    </insert>

    <select id="selectChildAbilityId" resultType="java.lang.Long">
        select ability_id
        from user_ability
        where user_id = #{userId}
        order by create_time desc
        limit 1
    </select>


</mapper>